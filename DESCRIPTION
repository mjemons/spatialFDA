Package: spatialFDA
Title: A Tool for Spatial Multi-sample Comparisons
Version: 0.99.0
Authors@R: c(
    person("Martin", "Emons", , "martin.emons@uzh.ch", role = c("aut", "cre"),
           comment = c(ORCID = "0009-0000-5219-5311")),
